html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Pug
        link(
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" 
            rel="stylesheet"
            integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" 
            crossorigin="anonymous"
        )
      
    body 
        include header.pug
        if prod.length !== 0
            section 
                table(class="table")
                    thead
                        tr 
                            th(scope="col") ID
                            th(scope="col") TÃ­tulo
                            th(scope="col") Precio
                            th(scope="col") Url
                    tbody 
                         each product in prod
                            tr 
                                td(scope="col")= product.id
                                td(scope="col")= product.title
                                td(scope="col")= product.price
                                td(scope="col")
                                    img(src=product.thumbnail style="width:50px; height:50px" alt="")
        else
            h3 No hay productos disponibles

        script(
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous"
    )